= search_form_for @search, class: 'navbar-form navbar-right' do |f|
  .form-group
    = f.search_field :email_or_last_name_or_first_name_cont, class: 'form-control', placeholder: 'Search'
  = f.submit t('.search'), class: 'btn btn-default'
%h2
  = t '.title'

%table.table.table-hover
  %thead
    %tr
      %th
      %th= t '.email'
      %th= t '.login'
      %th= t '.surname'
      %th= t '.name'
      %th= t '.birthday'
  %tbody
    - @users.each do |user|
      %tr
        %td= image_tag(user.avatar_url, width: 100, height: 100)
        %td= link_to user.email, user_path(user)
        %td= user.login
        %td= user.first_name
        %td= user.last_name
        %td= user.birthday

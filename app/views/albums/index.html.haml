%p.text-right= link_to t('.new_album'), new_album_path, class: 'btn btn-default btn-lg'
.page-header
  %h1= t '.title'
- @albums.each do |album|
  %h2
    = link_to album.title, album
    %small
      = album.description
  %p.text-right
    = link_to t('edit'), edit_album_path(album), class: 'btn btn-default'
    = link_to t('delete'), album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'
